{
  "name": "text2image-audio",
  "version": "1.0.0",
  "description": "A Cloudflare Worker for text-to-image and text-to-audio generation.",
  "main": "backend/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "deploy": "wrangler deploy",
    "lint": "eslint \"frontend/js/**/*.js\" \"backend/**/*.js\"",
    "lint:fix": "eslint \"frontend/js/**/*.js\" \"backend/**/*.js\" --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,css,html,json,md}\"",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "**/*.{js,css,html,json,md}": [
      "prettier --write"
